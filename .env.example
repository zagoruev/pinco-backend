# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:${PORT}
API_PREFIX=api

# Security
AUTH_SECRET=your-jwt-secret-here
AUTH_TOKEN_EXPIRES_IN=30d

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=pinco

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@pinco.com

# Screenshot Storage
SCREENSHOT_BASE_DIR=./screenshots
SCREENSHOT_BASE_URL=${APP_URL}/screenshots